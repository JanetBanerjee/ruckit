<%= bootstrap_form_for(@fixture, html: { class: 'form-inline' }) do |f| %>
  <%= f.text_field :club_name %>
  <%= f.text_field :address %>
  <%= f.text_field :city %>
  <%= f.text_field :providence %>
  <%= f.text_field :country %>

  <%= f.text_field :age %>

  <%= f.text_field :club_email %>
  <%= f.text_field :club_twitter %>
  <%= f.text_field :club_website %>

  <%= f.text_area :club_info  %>
  <%= f.file_field :image %>

  <button type="submit" class="btn btn-primary">
    Submit
  </button>
<% end %>